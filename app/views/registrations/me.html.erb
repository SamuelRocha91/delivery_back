<div class="user-details">
  <p style="color: green;"><%= notice %></p>
  <h2>User: <%= @user.email%></h2>
  <p><strong>id:</strong> <%= @user.id%></p>
  <%= link_to "Edit this user",  edit_registration_path(id: @user.id)%>
    <% if @user.discarded? %>
      <%= button_to "Active this user", reactivate_user_path(id: @user.id), method: :put, data: { confirm: "Are you sure?" }, class: "btn btn-activate"  %>

   <% else  %>
      <%= button_to "Deactivate this user", deactivate_user_path(id: @user.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-activate"   %>
    <% end  %>
  <%= link_to "Go To The users", users_path%>
</div>