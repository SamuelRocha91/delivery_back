<p style="color: green;"><%= notice %></p>
<%= form_with(model: @user, url: registration_path(@user), method: :patch, html: { class: 'user-form', id: 'edit-user-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :email, 'Email', class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control', id: 'user-email' %>
  </div>

  <div class="form-group">
    <%= form.label :role, 'Role', class: 'form-label' %>
    <%= form.select :role, User.roles.keys, {}, { class: 'form-control', id: 'user-role' } %>
  </div>

  <div class="form-group">
    <%= form.submit 'Update User', class: 'btn btn-primary', id: 'update-user-button' %>
  </div>
<% end %>

