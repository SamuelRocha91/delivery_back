<h1 id="product-title">Products Listing</h1>

<div class="products-container">
  <% @products.each do |product| %>

      <div class="card">
        <% if product.image.attached? %>
          <div>
            <%= image_tag product.image, alt: product.title, class: "product-image" %>
          </div>
        <% end %>
        <div class="card-content">
          <h3><%= product.title %></h3>
          <%= link_to "Show this product", store_product_path(store_id: product.store, id: product) %>
          <p>Store: <%= product.store.name %></p>
          <%= link_to "Show this store", store_path(id: product.store)%>
           <% if product.discarded? %>
            <h3>Status: inativo</h3>
            <% else  %>
            <h3>Status: ativo</h3>
          <% end  %>
          </div>
        </div>
      <hr />
<% end %>
</div>