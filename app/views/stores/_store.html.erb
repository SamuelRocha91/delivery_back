<div id="<%= dom_id store %>" class="store-card">
  <div class="card-container">
    <% if store.avatar.attached? %>
      <%= image_tag store.avatar.variant(resize_to_limit: [100, 100]), alt: store.name, class: "store-avatar" %>
    <% end %>
    <div>
      <div class="store-content">
        <div>
          <strong class="store-label">Name:</strong>
          <span class="store-name"><%= store.name %></span>
        </div>
        <div>
          <strong class="store-label">Address:</strong>
          <span class="store-address"><%= store.address || 'not registered' %></span>
        </div>
      </div>
      <% if store.discarded? %>
        <h3>Cadastro excluído</h3>
      <% else  %>
          <% if store.is_open %>
            <h3 class="open-store">Loja aberta</h3>
          <% else  %>
            <h3 class="closed-store">Loja fechada</h3>
         <% end  %>
      <% end  %>
        </div>
        <div>
          <strong class="store-label">Proprietário:</strong>
          <span class="store-name"><%= store.user.email %></span>
        </div>
    </div>
</div>
