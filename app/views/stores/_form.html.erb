<%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <% if current_user.admin? && store.user_id.nil? %>
  <div>
    <%= form.label :seller, style: "display:block"%>
    <%= form.collection_select :user_id, @sellers, :id, :email, prompt: "Sellers..." %>
  </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>


<% end %>
